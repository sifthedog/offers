<% flash.each do |type, msg| %>
  <% if type == "alert" %>
      <div class="alert alert-danger text-center">
  <% else %>
      <div class="alert alert-success text-center">
  <% end %>
  <% msg.each do |k, v|%>
    <div>
      <%= v.first + "\n" %>
    </div>
  <% end %>
  </div>
<% end %>

<div class='container'>
  <%= form_with scope: :offer, url: offer_path, method: 'put', local: true do |form| %>
    <div class="card mt-5">
      <h3 class="card__border p-3">
        Update Offer:
      </h3>

      <div class="input-group p-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Advertiser name:</span>
        </div>
        <%= form.text_field :advertiser_name, :class => "form-control", required: true %>
      </div> 
      <div class="input-group p-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">URL:</span>
        </div>
        <%= form.url_field :url, :class => "form-control", required: true%>
      </div> 
      <div class="input-group p-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Description:</span>
        </div>
        <%= form.text_area :description, :class => "form-control", rows: "8", required: true %>
      </div>                 
      <div class="input-group p-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Starts at (timestamp):</span>
        </div>
        <%= form.number_field :starts_at, 
          :class => "form-control", 
          required: true, 
          value: Time.current.to_i 
        %>
      </div>
      <div class="input-group p-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Ends at (timestamp):</span>
        </div>
        <%= form.number_field :ends_at, :class => "form-control" %>
      </div> 
      <div class="input-group p-3 card__border">
        Premium:
        <%= check_box("offer", "premium", {}, true, false) -%>
      </div>
      <div class="d-flex flex-row-reverse p-3">
        <%= form.submit "Submit", :class => "btn btn-primary" %>
        <%= link_to "Go Back", offers_path, :method => :get, :class => "btn mr-3" %>
      </div>
    </div>
  <% end %>
</div>